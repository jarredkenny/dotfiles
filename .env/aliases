# Aliases for managing dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias bootstrap='$HOME/.env/bootstrap'

alias cpl='config pull'
alias cph='config push'
alias ca='config add'

# Additional Aliases
alias e='nvim'
alias vim='nvim'
alias lsd="ls -ltrh"
alias gl='git log --pretty=format:'\''%Cred%h %Cblue%ci%Creset %G? %an %Cgreen%s%Creset'\'''

# Git aliases
alias cln='git clone'
alias co='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gs='git status'
alias gaa='git add -A .'
alias gcm='git commit -m '
alias gp='git push'
alias gpl='git pull'
alias grh='git reset HEAD'
alias grhh='git reset --hard HEAD'
alias gcfd='git clean -fd'
alias gbs='git branch | grep -v $(git branch --show-current) | grep -ve "master" | xargs git branch -D'

# Docker
alias dc='docker-compose'
alias dvp='docker volume prune'
alias dsp='docker system prune'
alias dsa='docker stop $(docker ps -aq)'
alias dra='docker rm $(docker ps -aq)'

alias cat='bat'
alias ls='exa'
