#!/bin/bash

ENV_DIR="$( cd "$( dirname "$0" )" && pwd )"

function addPath() {
  export PATH="$PATH:$1"
}

# Only set git configs if they're not already set
if [ -z "$(git config --global --get core.pager 2>/dev/null)" ]; then
  git config --global user.email "jarred.kenny@tracktile.io"
  git config --global user.name "Jarred Kenny"
  git config --global pull.rebase true
  git config --global fetch.prune true
  git config --global diff.colorMoved zebra
  git config --global core.ignorecase false
  git config --global column.ui auto
  git config --global branch.sort -committerdate
  git config --global rerere.enabled true
  git config --global gpg.format ssh
  git config --global user.signingkey $HOME/.ssh/id_rsa
  git config --global push.autoSetupRemote true
  git config --global diff.tool critique
  git config --global difftool.critique.cmd 'critique difftool "$LOCAL" "$REMOTE"'
fi


export PATH="$HOME/.env/bin:$HOME/.local/bin:$HOME/bin:$PATH"
export AWS_PAGER=""
export GPG_TTY="$(tty)"
export EDITOR="nvim"

source $ENV_DIR/aliases

OS="`uname`"
case $OS in
    'Linux') source $ENV_DIR/system/linux.env;;
    'Darwin') source $ENV_DIR/system/macos.env;;
    *) echo "Unknown system type: $OS";;
esac

# Source env.zsh from each component or from supplied component
for envfile in $(find $ENV_DIR/components -name env.zsh); do
  source $envfile
done

config config status.showUntrackedFiles no

set -a
. $HOME/.env/.env
set +a
